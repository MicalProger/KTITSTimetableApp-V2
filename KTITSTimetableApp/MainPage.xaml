<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KTITSTimetableApp.MainPage">

    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <VerticalStackLayout Margin="10, 0" Spacing="2">
            <Label FontSize="12" Text="Текущее время"/>
            <Label FontSize="35" x:Name="NowTimeLb"/>
        </VerticalStackLayout>
        <ScrollView VerticalOptions="StartAndExpand"  Orientation="Vertical" Grid.Row="1">
            <VerticalStackLayout
            Spacing="5"
            Padding="10,0"
            x:Name="LessonsViewer">
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
